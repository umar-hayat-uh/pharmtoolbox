<svg class="absolute dna-helix" style="top:<%= top %>; left:<%= left %>; width:<%= width %>; height:<%= height %>;" viewBox="0 0 100 300" xmlns="http://www.w3.org/2000/svg">
  <!-- DNA Strands -->
  <path d="M30,0 C30,50 70,50 70,100 S30,150 30,200 S70,250 70,300" stroke="<%= strand1_color %>" stroke-width="3" fill="none"/>
  <path d="M70,0 C70,50 30,50 30,100 S70,150 70,200 S30,250 30,300" stroke="<%= strand2_color %>" stroke-width="3" fill="none"/>

  <!-- Connecting Rungs -->
  <% rungs.each do |y, color| %>
    <line x1="30" y1="<%= y %>" x2="70" y2="<%= y %>" stroke="<%= color %>" stroke-width="2"/>
  <% end %>
</svg>


<style>
/* app/assets/stylesheets/application.css or a new file */
@keyframes dna3d {
  0% { transform: rotateY(0deg) translateY(0); }
  50% { transform: rotateY(180deg) translateY(-15px); }
  100% { transform: rotateY(360deg) translateY(0); }
}

.dna-helix {
  animation: dna3d 8s linear infinite;
  transform-origin: 50% 50%;
  pointer-events: none;
}

</style>