<style>
  /* Floating Molecules */
  .molecule {
    position: absolute;
    opacity: 0.8;
    animation-name: float;
    animation-iteration-count: infinite;
    animation-timing-function: ease-in-out;
  }

  .animate-float { animation-duration: 8s; }
  .animate-float-slow { animation-duration: 12s; }

  @keyframes float {
    0% { transform: translateY(0px) translateX(0px) rotate(0deg); }
    25% { transform: translateY(-20px) translateX(10px) rotate(15deg); }
    50% { transform: translateY(0px) translateX(20px) rotate(0deg); }
    75% { transform: translateY(-20px) translateX(-10px) rotate(-15deg); }
    100% { transform: translateY(0px) translateX(0px) rotate(0deg); }
  }

  /* Bouncing Hero Title */
  .animate-bounce-slow {
    animation: bounce 2.5s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  /* Fade-in Paragraph */
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 2s forwards 0.5s;
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  /* Pulsing Highlight */
  .animate-pulse {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.8; }
  }
</style>



