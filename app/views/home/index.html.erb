<!-- Hero Section -->
<section class="relative bg-gradient-to-r from-emerald-600 to-teal-700 text-white pt-32 pb-20">
  <div class="max-w-7xl mx-auto px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-6xl font-extrabold mb-6">
      Welcome to <span class="text-yellow-300">Pharmtoolbox</span>
    </h1>
    <p class="text-lg md:text-xl mb-8 text-slate-100">
      Your trusted partner in pharmaceutical innovation and digital solutions.
    </p>
    <a href="#"
       class="px-6 py-3 bg-yellow-400 text-slate-900 font-semibold rounded-lg shadow-md hover:bg-yellow-300 transition">
      Get Started
    </a>
  </div>
</section>

<%= render 'shared/components/services' %>

<%= render 'shared/components/team' %>


<!-- Contact Section -->
<section id="contact" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div>
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Get in Touch</h2>
        <p class="text-gray-600 mb-6">
          Have questions or suggestions? Weâ€™d love to hear from you.  
          Reach out and our team will respond as soon as possible.
        </p>
        <ul class="space-y-4">
          <li class="flex items-center gap-3">
            <i class="fa-solid fa-envelope text-emerald-600 text-xl"></i>
            <a href="mailto:support@pharmtoolbox.com" class="text-gray-700 hover:text-emerald-600">
              support@pharmtoolbox.com
            </a>
          </li>
          <li class="flex items-center gap-3">
            <i class="fa-solid fa-phone text-emerald-600 text-xl"></i>
            <span class="text-gray-700">+123 456 7890</span>
          </li>
          <li class="flex items-center gap-3">
            <i class="fa-solid fa-location-dot text-emerald-600 text-xl"></i>
            <span class="text-gray-700">123 Pharma St, Innovation City</span>
          </li>
        </ul>
      </div>

      <!-- Contact Form -->
      <div>
        <form action="#" method="POST" class="bg-white shadow rounded-2xl p-6 space-y-4">
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-1">Your Name</label>
            <input type="text" id="name" name="name"
                   class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-600">
          </div>
          <div>
            <label for="email" class="block text-gray-700 font-medium mb-1">Your Email</label>
            <input type="email" id="email" name="email"
                   class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-600">
          </div>
          <div>
            <label for="message" class="block text-gray-700 font-medium mb-1">Message</label>
            <textarea id="message" name="message" rows="4"
                      class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-emerald-600"></textarea>
          </div>
          <button type="submit"
                  class="w-full px-6 py-3 bg-emerald-600 text-white font-semibold rounded-lg shadow-md hover:bg-emerald-500 transition">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
